<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:elevation="10dp"

    >

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#b3FFFFFF"
        android:paddingLeft="10dp"
        android:text="test"
        android:background="@drawable/clickable_rect_day_top"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_add_circle_outline_white_18dp"
        android:drawablePadding="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/listitem_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="2dp"
            android:layout_weight="0.33"
            android:layout_gravity="bottom"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/movement_summary"
                android:text="Movement"
                android:textColor="@color/motiongraphtext"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="top"


                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/movement_summary_m"
                android:textSize="28sp"
                android:alpha="0.54"
                android:text="-"
                android:drawableLeft="@drawable/ic_directions_run_black_24dp"
                android:layout_gravity="bottom"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:layout_weight="0.33"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sound_summary"
                android:text="Social Sound"
                android:textColor="@color/soundgraph"
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sound_summary_m"
                android:text="-"
                android:textSize="28sp"
                android:alpha="0.54"
                android:drawableLeft="@drawable/ic_hearing_black_24dp"
                android:layout_gravity="bottom"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:layout_weight="0.33"
            >



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/location_summary"
                android:text="Location Diversity"
                android:textColor="@color/locationgraphtext"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_gravity="top"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/location_summary_m"
                android:text="-"
                android:textSize="28sp"
                android:alpha="0.54"
                android:drawableLeft="@drawable/ic_place_black_24dp"
                android:layout_gravity="bottom"
                />



        </LinearLayout>


    </LinearLayout>


    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="#FFFFFF"
        android:visibility="gone"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        />

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@color/navigationBarColor"/>-->

</LinearLayout>